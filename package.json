{
  "name": "andmade",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "dev:sandbox": "wrangler pages dev dist --d1=DB --local --ip 0.0.0.0 --port 3000",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name andmade",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply andmade-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply andmade-production",
    "db:seed": "wrangler d1 execute andmade-production --local --file=./migrations/0001_initial.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local"
  },
  "dependencies": {
    "hono": "^4.11.10"
  },
  "devDependencies": {
    "@hono/node-server": "^1.14.4",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
